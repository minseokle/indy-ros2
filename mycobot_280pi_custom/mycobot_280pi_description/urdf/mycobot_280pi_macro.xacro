<?xml version="1.0"?>
<robot xmlns:xacro="http://wiki.ros.org/xacro">

    <xacro:include filename="$(find mycobot_280pi_description)/urdf/mycobot_280pi.ros2_control.xacro" />

    <xacro:macro name="mycobot_280pi_robot" params="
        robot_name
        parent
        *origin">

        <!-- links -  main serial chain -->
        <link name="${robot_name}joint1">
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://mycobot_280pi_description/meshes/mycobot_280pi/joint1_pi.dae"/>
                </geometry>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://mycobot_280pi_description/meshes/mycobot_280pi/joint1_pi.dae"/>
                </geometry>
            </collision>
        </link>

        <link name="${robot_name}joint2">
            <visual>
                <origin xyz = "0.0 0 -0.06096 " rpy = " 0 0 -1.5708"/>
                <geometry>
                    <mesh filename="package://mycobot_280pi_description/meshes/mycobot_280pi/joint2.dae"/>
                </geometry>
            </visual>
            <collision>
                <origin xyz = "0.0 0 -0.06096 " rpy = " 0 0 -1.5708"/>
                <geometry>
                    <mesh filename="package://mycobot_280pi_description/meshes/mycobot_280pi/joint2.dae"/>
                </geometry>
            </collision>
        </link>

        <link name="${robot_name}joint3">
            <visual>
                <origin xyz = "0.0 0 0.03256 " rpy = " 0 -1.5708 0"/>
                <geometry>
                    <mesh filename="package://mycobot_280pi_description/meshes/mycobot_280pi/joint3.dae"/>
                </geometry>
            </visual>
            <collision>
                <origin xyz = "0.0 0 0.03256 " rpy = " 0 -1.5708 0"/>
                <geometry>
                    <mesh filename="package://mycobot_280pi_description/meshes/mycobot_280pi/joint3.dae"/>
                </geometry>
            </collision>
        </link>

        <link name="${robot_name}joint4">
            <visual>
                <origin xyz = "0.0 0 0.03056 " rpy = " 0 -1.5708 0"/>
                <geometry>
                    <mesh filename="package://mycobot_280pi_description/meshes/mycobot_280pi/joint4.dae"/>
                </geometry>
            </visual>
            <collision>
                <origin xyz = "0.0 0 0.03056 " rpy = " 0 -1.5708 0"/>
                <geometry>
                    <mesh filename="package://mycobot_280pi_description/meshes/mycobot_280pi/joint4.dae"/>
                </geometry>
            </collision>
        </link>

        <link name="${robot_name}joint5">
            <visual>
                <origin xyz = "0.0 0 -0.03356 " rpy = " 0 -1.5708 1.5708"/>
                <geometry>
                    <mesh filename="package://mycobot_280pi_description/meshes/mycobot_280pi/joint5.dae"/>
                </geometry>
            </visual>
            <collision>
                <origin xyz = "0.0 0 -0.03356 " rpy = " 0 -1.5708 1.5708"/>
                <geometry>
                    <mesh filename="package://mycobot_280pi_description/meshes/mycobot_280pi/joint5.dae"/>
                </geometry>
            </collision>
        </link>

        <link name="${robot_name}joint6">
            <visual>
                <origin xyz = "0 0.00 -0.038 " rpy = " 0 0 0"/>
                <geometry>
                    <mesh filename="package://mycobot_280pi_description/meshes/mycobot_280pi/joint6.dae"/>
                </geometry>
            </visual>
            <collision>
                <origin xyz = "0 0.00 -0.038 " rpy = " 0 0 0"/>
                <geometry>
                    <mesh filename="package://mycobot_280pi_description/meshes/mycobot_280pi/joint6.dae"/>
                </geometry>
            </collision>
        </link>

        <link name="${robot_name}joint6_flange">
            <visual>
                <origin xyz = "0.0 0 -0.012 " rpy = " 0 0 0"/>
                <geometry>
                    <mesh filename="package://mycobot_280pi_description/meshes/mycobot_280pi/joint7.dae"/>
                </geometry>
            </visual>
            <collision>
                <origin xyz = "0.0 0 -0.012 " rpy = " 0 0 0"/>
                <geometry>
                    <mesh filename="package://mycobot_280pi_description/meshes/mycobot_280pi/joint7.dae"/>
                </geometry>
            </collision>
        </link>

        <link name="${robot_name}gripper_base">
            <visual>
                <geometry>
                    <mesh filename="package://mycobot_280pi_description/meshes/mycobot_280pi//gripper_base.dae"/>
                </geometry>
                <origin xyz = "0.0 0.0077 -0.012" rpy = " 0 0 0"/>
            </visual>
            <collision>
                <geometry>
                    <mesh filename="package://mycobot_280pi_description/meshes/mycobot_280pi/gripper_base.dae"/>
                </geometry>
                <origin xyz = "0.0 0.0077 -0.012 " rpy = " 0 0 0"/>
            </collision>
        </link>

        <link name="${robot_name}gripper_left1">
            <visual>
                <geometry>
                    <!--- 0.0 0 -0.04 -->
                    <mesh filename="package://mycobot_280pi_description/meshes/mycobot_280pi/gripper_left1.dae"/>
                </geometry>
                <origin xyz = "0.039 -0.0133 -0.012 " rpy = " 0 0 0"/>
                <!-- <origin xyz = "0.0 0 -0.012 " rpy = " 0 0 0"/> -->
            </visual>
            <collision>
                <geometry>
                    <mesh filename="package://mycobot_280pi_description/meshes/mycobot_280pi/gripper_left1.dae"/>
                </geometry>
                <origin xyz = "-0.039 -0.0133 -0.012 " rpy = " 0 0 0"/>
            </collision>
        </link>

        <link name="${robot_name}gripper_left2">
            <visual>
                <geometry>
                    <mesh filename="package://mycobot_280pi_description/meshes/mycobot_280pi/gripper_left2.dae"/>
                </geometry>
                <origin xyz = "0.005 -0.0195 -0.012 " rpy = " 0 0 0"/>
            </visual>
            <collision>
            <geometry>
            <mesh filename="package://mycobot_280pi_description/meshes/mycobot_280pi/gripper_left2.dae"/>
            </geometry>
                <origin xyz = "-0.005 -0.0195 -0.012 " rpy = " 0 0 0"/>
            </collision>
        </link>

        <link name="${robot_name}gripper_left3">
            <visual>
                <geometry>
                    <mesh filename="package://mycobot_280pi_description/meshes/mycobot_280pi/gripper_left3.dae"/>
                </geometry>
                <origin xyz = "0.012 0.0025 -0.012 " rpy = " 0 0 0"/>
                <!-- <origin xyz = "0.0 0 0 " rpy = " 0 0 0"/> -->
            </visual>
            <collision>
                <geometry>
                    <mesh filename="package://mycobot_280pi_description/meshes/mycobot_280pi/gripper_left3.dae"/>
                </geometry>
                <origin xyz = "0.012 0.0025 -0.012" rpy = " 0 0 0"/>
            </collision>
        </link>

        <link name="${robot_name}gripper_right1">
            <visual>
                <geometry>
                    <mesh filename="package://mycobot_280pi_description/meshes/mycobot_280pi/gripper_right1.dae"/>
                </geometry>
                <origin xyz = "-0.039 -0.0133 -0.012 " rpy = " 0 0 0"/>
            </visual>
            <collision>
                <geometry>
                <mesh filename="package://mycobot_280pi_description/meshes/mycobot_280pi/gripper_right1.dae"/>
                </geometry>
                <origin xyz = "-0.039 -0.0133 -0.012 " rpy = " 0 0 0"/>
            </collision>
        </link>

        <link name="${robot_name}gripper_right2">
            <visual>
                <geometry>
                    <mesh filename="package://mycobot_280pi_description/meshes/mycobot_280pi/gripper_right2.dae"/>
                </geometry>
                <origin xyz = "-0.005 -0.0195 -0.012 " rpy = " 0 0 0"/>
            </visual>
            <collision>
                <geometry>
                    <mesh filename="package://mycobot_280pi_description/meshes/mycobot_280pi/gripper_right2.dae"/>
                </geometry>
                    <origin xyz = "-0.005 -0.0195 -0.012 " rpy = " 0 0 0"/>
            </collision>
        </link>

        <link name="${robot_name}gripper_right3">
            <visual>
                <geometry>
                    <mesh filename="package://mycobot_280pi_description/meshes/mycobot_280pi/gripper_right3.dae"/>
                </geometry>
                <origin xyz = "-0.012 0.0025 -0.012 " rpy = " 0 0 0"/>
            </visual>
            <collision>
                <geometry>
                    <mesh filename="package://mycobot_280pi_description/meshes/mycobot_280pi/gripper_right3.dae"/>
                </geometry>
                <origin xyz = "-0.012 0.0025 -0.012" rpy = " 0 0 0"/>
            </collision>
        </link>

        <joint name="${robot_name}global" type="fixed">
            <xacro:insert_block name="origin" />
            <parent link="${parent}"/> <!--world-->
            <child link="${robot_name}joint1"/>
        </joint>

        <joint name="${robot_name}joint2_to_joint1" type="revolute">
            <axis xyz="0 0 1"/>
            <limit effort = "1000.0" lower = "-3.14" upper = "3.14159" velocity = "0"/>
            <parent link="${robot_name}joint1"/>
            <child link="${robot_name}joint2"/>
            <origin xyz= "0 0 0.13956" rpy = "0 0 0"/>  
        </joint>

        <joint name="${robot_name}joint3_to_joint2" type="revolute">
            <axis xyz="0 0 1"/>
            <limit effort = "1000.0" lower = "-3.14" upper = "3.14159" velocity = "0"/>
            <parent link="${robot_name}joint2"/>
            <child link="${robot_name}joint3"/>
            <origin xyz= "0 0 -0.001" rpy = "0 1.5708 -1.5708"/>  
        </joint>

        <joint name="${robot_name}joint4_to_joint3" type="revolute">
            <axis xyz=" 0 0 1"/>
            <limit effort = "1000.0" lower = "-3.14" upper = "3.14159" velocity = "0"/>
            <parent link="${robot_name}joint3"/>
            <child link="${robot_name}joint4"/>
            <origin xyz= "  -0.1104 0 0   " rpy = "0 0 0"/>  
        </joint>

        <joint name="${robot_name}joint5_to_joint4" type="revolute">
            <axis xyz=" 0 0 1"/>
            <limit effort = "1000.0" lower = "-3.14" upper = "3.14159" velocity = "0"/>
            <parent link="${robot_name}joint4"/>
            <child link="${robot_name}joint5"/>
            <origin xyz= "-0.096 0 0.06462" rpy = "0 0 -1.5708"/>  
        </joint>

        <joint name="${robot_name}joint6_to_joint5" type="revolute">
            <axis xyz="0 0 1"/>
            <limit effort = "1000.0" lower = "-3.14" upper = "3.14159" velocity = "0"/>
            <parent link="${robot_name}joint5"/>
            <child link="${robot_name}joint6"/>
            <origin xyz= "0 -0.07318 0" rpy = "1.5708 -1.5708 0"/>  
        </joint>

        <joint name="${robot_name}joint6output_to_joint6" type="revolute">
            <axis xyz="0 0 1"/>
            <limit effort = "1000.0" lower = "-3.14" upper = "3.14159" velocity = "0"/>
            <parent link="${robot_name}joint6"/>
            <child link="${robot_name}joint6_flange"/>
            <origin xyz= "0 0.0456 0" rpy = "-1.5708 0 0"/>  
        </joint>

        <joint name="${robot_name}joint6output_to_gripper_base" type="fixed">
            <!-- <axis xyz="0 0 1"/>
            <limit effort = "1000.0" lower = "-3.14" upper = "3.14159" velocity = "0"/> -->
            <parent link="${robot_name}joint6_flange"/>
            <child link="${robot_name}gripper_base"/>
            <origin xyz= "0 0 0.0139" rpy = "0 0 2.356192"/>  
            <!-- <origin xyz= "0 0 0.0263" rpy = "1.5708 0 0"/> -->
        </joint>

        <joint name="${robot_name}gripper_controller" type="revolute">
            <axis xyz="0 0 1"/>
            <limit effort = "1000.0" lower = "-0.7" upper = "0.15" velocity = "0"/>
            <parent link="${robot_name}gripper_base"/>
            <child link="${robot_name}gripper_left3"/>
            <origin xyz= "-0.012 0.005 0" rpy = "0 0 0"/> 
        </joint>

        <joint name="${robot_name}gripper_base_to_gripper_left2" type="revolute">
            <axis xyz="0 0 1"/>
            <limit effort = "1000.0" lower = "-0.8" upper = "0.5" velocity = "0"/>
            <parent link="${robot_name}gripper_base"/>
            <child link="${robot_name}gripper_left2"/>
            <origin xyz= "-0.005 0.027 0" rpy = "0 0 0"/> 
            <mimic joint="${robot_name}gripper_controller" multiplier="1.0" offset="0" />
        </joint>

        <joint name="${robot_name}gripper_left3_to_gripper_left1" type="revolute">
            <axis xyz="0 0 1"/>
            <limit effort = "1000.0" lower = "-0.5" upper = "0.5" velocity = "0"/>
            <parent link="${robot_name}gripper_left3"/>
            <child link="${robot_name}gripper_left1"/>
            <origin xyz= "-0.027 0.016 0" rpy = "0 0 0"/> 
            <mimic joint="${robot_name}gripper_controller" multiplier="-1.0" offset="0" />
        </joint>

        <joint name="${robot_name}gripper_base_to_gripper_right3" type="revolute">
            <axis xyz="0 0 1"/>
            <limit effort = "1000.0" lower = "-0.15" upper = "0.7" velocity = "0"/>
            <parent link="${robot_name}gripper_base"/>
            <child link="${robot_name}gripper_right3"/>
            <origin xyz= "0.012 0.005 0" rpy = "0 0 0"/> 
            <mimic joint="${robot_name}gripper_controller" multiplier="-1.0" offset="0" />
        </joint>

        <joint name="${robot_name}gripper_base_to_gripper_right2" type="revolute">
            <axis xyz="0 0 1"/>
            <limit effort = "1000.0" lower = "-0.5" upper = "0.8" velocity = "0"/>
            <parent link="${robot_name}gripper_base"/>
            <child link="${robot_name}gripper_right2"/>
            <origin xyz= "0.005 0.027 0" rpy = "0 0 0"/> 
            <mimic joint="${robot_name}gripper_controller" multiplier="-1.0" offset="0" />
        </joint>

        <joint name="${robot_name}gripper_right3_to_gripper_right1" type="revolute">
            <axis xyz="0 0 1"/>
            <limit effort = "1000.0" lower = "-0.5" upper = "0.5" velocity = "0"/>
            <parent link="${robot_name}gripper_right3"/>
            <child link="${robot_name}gripper_right1"/>
            <origin xyz= "0.027 0.016 0" rpy = "0 0 0"/> 
            <mimic joint="${robot_name}gripper_controller" multiplier="1.0" offset="0" />
        </joint>

        <!-- ros2 control -->
        <xacro:mycobot_ros2_control
            robot_name="${robot_name}"/>

    </xacro:macro>

</robot>
